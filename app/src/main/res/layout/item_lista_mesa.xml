<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ícone do Status -->
        <ImageView
            android:id="@+id/imgVendaTipo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/aberta" />

        <!-- Ícone da Modalidade -->
        <TextView
            android:id="@+id/txtMesaCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgVendaTipo"

            android:text="@string/_004"
            android:textColor="@color/yello"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGarcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtMesaCT"
            android:layout_below="@id/txtMesaCT"
            android:text="(10001) GARCON"
            android:textColor="@color/orang"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtGarcon"
            android:layout_alignParentEnd="true"
            android:text="R$ 2.000,00"
            android:textStyle="bold"
            android:textColor="@color/orang"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtGarcon"
            android:layout_alignBottom="@id/txtGarcon"
            android:layout_alignParentEnd="true"
            android:text="14:00:00"
            android:textColor="@color/orang"
            tools:ignore="HardcodedText" />

        <!-- Nome Cliente -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txtMesaCT"
            android:ellipsize="end"
            android:textColor="@color/orang"

            android:maxLines="1"
            android:text="" />

        <!-- Local Entrega -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@id/textView8"
            android:ellipsize="end"
            android:textColor="@color/orang"
            android:maxLines="1"
            android:text="" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>