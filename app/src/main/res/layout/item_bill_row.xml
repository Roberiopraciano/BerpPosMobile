<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingHorizontal="1dp">

    <!-- Primeira linha: Descrição (destaque) + Total (destaque) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="X-Burger Duplo com Bacon"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvItemTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 38,00"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- Segunda linha: código, qtd, unitário (menores e discretos) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cód: 123"
            android:textColor="#000006"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qtd: 2"
            android:textColor="#000002"
            android:textSize="10sp"
            android:layout_marginStart="8dp" />
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X "
            android:textColor="#000002"
            android:textSize="10sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit: R$ 19,00"
            android:textColor="#000002"
            android:textSize="10sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>


</LinearLayout>